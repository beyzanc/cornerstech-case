@model Cornerstech.Web.Models.Risk.RiskCreateViewModel

@{
    ViewBag.Title = "Risk Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Risk Oluştur</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-8">
            <label asp-for="Category" class="control-label">Kategori</label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="SelectedLevel" class="control-label">Seviye</label>
            <select asp-for="SelectedLevel" class="form-control">
                <option value="">Seçiniz</option>
                @foreach (var level in Model.LevelOptions)
                {
                    <option value="@level.Key.ToString(System.Globalization.CultureInfo.InvariantCulture)">@level.Value</option>
                }
            </select>
            <span asp-validation-for="SelectedLevel" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SelectedFrequence" class="control-label">Frekans</label>
            <select asp-for="SelectedFrequence" class="form-control">
                <option value="">Seçiniz</option>
                @foreach (var frequence in Model.FrequenceOptions)
                {
                    <option value="@frequence.Key.ToString(System.Globalization.CultureInfo.InvariantCulture)">@frequence.Value</option>
                }
            </select>
            <span asp-validation-for="SelectedFrequence" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SelectedPossibility" class="control-label">Olasılık</label>
            <select asp-for="SelectedPossibility" class="form-control">
                <option value="">Seçiniz</option>
                @foreach (var possibility in Model.PossibilityOptions)
                {
                    <option value="@possibility.Key.ToString(System.Globalization.CultureInfo.InvariantCulture)">@possibility.Value</option>
                }
            </select>
            <span asp-validation-for="SelectedPossibility" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 text-left">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a href="@Url.Action("Index", "Risk")" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
