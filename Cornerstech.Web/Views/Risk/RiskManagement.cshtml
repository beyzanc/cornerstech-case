@model Cornerstech.Web.Models.Risk.RiskManagementViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Risk Değer Yönetimi";
}

<div class="row">
    <div class="col-md-4">
        <h4>Seviye - Değer</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Tanım</th>
                    <th>Değer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kvp in Model.LevelDescriptions)
                {
                    <tr>
                        <td>@kvp.Value</td>
                        <td>@kvp.Key</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>Gerçekleşme Sıklığı - Değer</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Tanım</th>
                    <th>Değer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kvp in Model.FrequenceDescriptions)
                {
                    <tr>
                        <td>@kvp.Value</td>
                        <td>@kvp.Key</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h4>Olasılık - Değer</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Tanım</th>
                    <th>Değer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kvp in Model.PossibilityDescriptions)
                {
                    <tr>
                        <td>@kvp.Value</td>
                        <td>@kvp.Key</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="col-lg-8 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        NOT
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">Risk skor hesabı şu şekilde yapılır: Seviye * Gerçekleşme Sıklığı * Olasılık</div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-info-circle fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>
