@model Cornerstech.Web.Models.SubjectOfWork.SubjectOfWorkDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "İş Konusu Düzenle";

}

<form asp-action="Edit">

    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="Name">Konu</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group col-md-3">
            <label for="Description">Detay Bilgi</label>
            <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" />
        </div>

        <div class="form-group col-md-3">
            <label for="Category">Kategori</label>
            <select class="form-control" asp-for="Category" asp-items="ViewBag.Categories"></select>
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            <label for="Agreements">Partnerler</label>
            <select id="Agreements" name="SelectedAgreements" multiple="multiple" class="form-control">
                @foreach (var agreement in Model.AgreementOptions)
                {
                    <option value="@agreement.Value" selected="@(agreement.Selected ? "selected" : null)">@agreement.Text</option>
                }
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
