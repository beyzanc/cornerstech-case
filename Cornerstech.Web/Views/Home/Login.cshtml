@model Cornerstech.Web.Models.User.LoginViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewBag.Title = "Login";
}

<form asp-action="Login" method="post" class="login-form">
    <div class="form-group col-md-12">
        <input type="text" class="form-control" id="Username" asp-for="Username" placeholder="Kullanıcı Adı">
    </div>
    <div class="form-group col-md-12">
        <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Parola">
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
    <div class="validation-summary">
        @Html.ValidationSummary()
    </div>
</form>