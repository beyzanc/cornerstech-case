@model Cornerstech.Web.Models.Partner.PartnerDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ortak Bilgisi Düzenle";
}

<form asp-action="Edit">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Name">Ortak Adı</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group col-md-4">
            <label for="ContactEmail">Email</label>
            <input type="text" class="form-control" id="ContactEmail" name="ContactEmail" value="@Model.ContactEmail" />
        </div>
        <div class="form-group col-md-4">
            <label for="PhoneNumber">Telefon</label>
            <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="City">Şehir</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.City" />
        </div>
        <div class="form-group col-md-4">
            <label for="Industry">Sektör</label>
            <select class="form-control" asp-for="Industry" asp-items="ViewBag.Industries"></select>
        </div>
        <div class="form-group col-md-4">
            <label for="CreatedDate">Eklenme Tarihi</label>
            <input type="date" class="form-control" id="CreatedDate" name="CreatedDate" value="@(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("yyyy-MM-dd") : string.Empty)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 text-left">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a href="@Url.Action("Index", "Partner")" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</form>
